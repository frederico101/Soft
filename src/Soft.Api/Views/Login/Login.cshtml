@model Soft.Api.ViewModel.UserViewModel

@{
    ViewBag.Title = "Login";
}

@section Styles {
    <style>
        .login_container {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: green;
            padding: 20px;
            border-radius: 5px; 
            color: white;
        }

        .login {  
        }
        .login_button {
            background-color: peachpuff;
            color: white;
            border-radius: 5px;
            margin: 2px;
        }
        .login_button:hover {
            background-color: peru;
        }
    </style>
}


<section class="login_container">
    <div class="login">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="login_button">Login</button>
                </div>
            </div>
        }
    </div>

</section>
